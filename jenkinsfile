pipeline {
    agent any

   

   


    stages {

        stage ('Compile stage') {
            steps {
                withMaven(maven: 'Maven_3_6_0') {

                    sh 'mvn --version'
                    sh 'mvn compile'
                }
            }
        }

        stage ('Testing stage') {

            steps {
                withMaven(maven: 'Maven_3_6_0') {
                    sh 'mvn test'
                }
             }
         }

        stage ('Deployment stage') {

                steps {
                withMaven(maven: 'Maven_3_6_0') {
                    sh 'mvn deploy'
                }
             }
         }
    }
}
